{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: Build Hospital System (Corrected)", // Task name for VS Code UI
			"command": "P:\\Program\\MinGW\\mingw64\\bin\\g++.exe", // Path to your C++ compiler (g++)
			"args": [
                // Compiler flags for warnings and debug information
                "-Wall",      // Enable all common warnings
                "-Wextra",    // Enable extra warnings
                "-g3",        // Generate debug symbols for debugging

                // Source files to be compiled
                "${workspaceFolder}/Main.cpp",             // Main program file
                "${workspaceFolder}/HospitalSystem.cpp",   // Implementation of classes

                // Output file specification
                "-o",
