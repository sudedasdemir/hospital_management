			},
			"problemMatcher": [
				"$gcc" // Use GCC's problem matcher to parse compiler errors/warnings
			],
			"group": {
				"kind": "build",
				"isDefault": true // Set this as the default build task (run with Ctrl+Shift+B)
			},
			"detail": "Compiler: P:\\Program\\MinGW\\mingw64\\bin\\g++.exe"
