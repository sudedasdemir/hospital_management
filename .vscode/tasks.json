{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: Build Hospital System (Corrected)", // اسم المهمة
			"command": "P:\\Program\\MinGW\\mingw64\\bin\\g++.exe", // مسار المترجم (compiler)
			"args": [
                // Flags for warnings and debug information
                "-Wall",      // Enable all common warnings
                "-Wextra",    // Enable extra warnings
                "-g3",        // Generate debug info for debugger (level 3)

                // Source files - هنا بنضيف كل ملفات الـ .cpp اللي فيها الكود الفعلي
                "${workspaceFolder}/Main.cpp",             // ملف الـ main
                "${workspaceFolder}/HospitalSystem.cpp",   // ملف الـ implementation لكل الكلاسات

                // Output file and path
                "-o",
                "${workspaceFolder}/output/Main.exe",      // المسار واسم الملف التنفيذي
                
                // C++ standard
                "-std=c++17"            // استخدام معيار C++17
            ],
			"options": {
				"cwd": "${workspaceFolder}" // تشغيل الأمر من جذر مجلد المشروع
			},
			"problemMatcher": [
				"$gcc" // استخدام GCC problem matcher لتحليل أخطاء الـ compile
			],
			"group": {
				"kind": "build",
				"isDefault": true // تعيين هذه المهمة كمهمة البناء الافتراضية
			},
			"detail": "Compiler: P:\\Program\\MinGW\\mingw64\\bin\\g++.exe"
		}
	]
}