{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "Build Hospital Project",
            "command": "/usr/bin/clang++",
            "args": [
                "-std=c++17",
                "-g",
                // Header dosyalarının olduğu klasör
                "-I${workspaceFolder}/Header",
                // Implementation içindeki tüm cpp dosyaları
                "${workspaceFolder}/Implementation/*.cpp",
                // Ana Main dosyası
                "${workspaceFolder}/Main.cpp",
                "-o",
                // Çıktı dosyası (Mac'te .exe uzantısına gerek yoktur ama karışıklık olmasın diye app diyelim)
                "${workspaceFolder}/hospital_app"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Mac OS Clang compiler configuration"
        }
    ]
}